{
  "name": "pelefood",
  "version": "1.0.0",
  "description": "PeleFood - SaaS Platform for Restaurants",
  "main": "index.js",
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "build-css": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --watch",
    "build-css-prod": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --minify"
  },
  "keywords": [
    "restaurant",
    "saas",
    "management",
    "laravel",
    "livewire"
  ],
  "author": "PeleFood Team",
  "license": "MIT",
  "devDependencies": {
    "alpinejs": "^3.15.0",
    "autoprefixer": "^10.4.16",
    "axios": "^1.12.2",
    "laravel-mix": "^6.0.49",
    "laravel-vite-plugin": "^2.0.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.0",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10"
  }
}
